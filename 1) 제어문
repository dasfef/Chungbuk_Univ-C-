// ▣ 제어문 4)
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main(void)
{
	int a;
	int b = 1;
	int sum = 0;
	while (1) {
		printf("정수값 입력 : ");
		scanf("%d", &a);
		if (a < 0) {
			printf("음의 정수값 %d은 허용하지 않습니다\n", a);
			printf("양의 정수값을 다시 입력하세요\n");
			continue;
		}
		else {
			do {
				b = b + 1;
				sum = b
			} while(sum <= a);
			printf("1부터 %d까지 누적 합계 : %d", a, sum);
			break;
		}
	}
}
